{
  "name": "palt-typesetting",
  "version": "0.2.1",
  "description": "A typesetting library.",
  "main": "./dist/index.js",
  "files": [
    "dist/**/*",
    "bundle/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yamatoiizuka/palt-typesetting.git"
  },
  "scripts": {
    "clean:dist": "rm -rf ./dist",
    "copy:types": "mkdir -p ./dist/types && cp -R ./src/types/* ./dist/types",
    "prebuild": "npm run clean:dist && npm run copy:types",
    "build": "tsc && npm run bundle",
    "postbuild": "rm -rf ./dist/bundle.js",
    "bundle": "esbuild ./dist/bundle.js --bundle --outfile=./bundle/typesetter.min.js --minify --sourcemap --platform=browser --target=es2016 --global-name=Typesetter",
    "test": "jest",
    "lint": "eslint ./src/** --no-error-on-unmatched-pattern",
    "lint:fix": "eslint ./src/** --fix"
  },
  "author": {
    "name": "Yamato Iizuka",
    "email": "me@yamatoiizuka.com"
  },
  "license": "MIT",
  "browser": {
    "./dist/win.js": "./dist/win-browser.js"
  },
  "dependencies": {
    "jsdom": "^23.0.1",
    "linebreak": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.19.11",
    "eslint": "^8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5"
  }
}
