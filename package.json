{
  "name": "palt-typesetting",
  "version": "0.5.4",
  "description": "A typesetting library.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "types/**/*",
    "dist/**/*",
    "bundle/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yamatoiizuka/palt-typesetting.git"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./bundle",
    "copy:css": "mkdir ./dist && cp -R ./src/*.css ./dist/",
    "prebuild": "npm run clean && npm run copy:css",
    "bundle:css": "mkdir ./bundle && cleancss -o ./bundle/typesetter.min.css ./src/*.css",
    "bundle": "npm run bundle:css && webpack",
    "build": "node ./scripts/build.js && npm run bundle",
    "test": "vitest",
    "lint": "eslint \"./src/**/*.ts\" --no-error-on-unmatched-pattern",
    "lint:fix": "eslint ./src/** --fix"
  },
  "author": {
    "name": "Yamato Iizuka",
    "email": "me@yamatoiizuka.com"
  },
  "license": "MIT",
  "browser": {
    "./dist/win.js": "./dist/win-browser.js"
  },
  "dependencies": {
    "jsdom": "^24.0.0",
    "linebreak": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "clean-css-cli": "^5.6.3",
    "css-loader": "^6.10.0",
    "esbuild": "^0.20.1",
    "eslint": "^8",
    "style-loader": "^3.3.4",
    "typescript": "^5",
    "vitest": "^1.2.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
