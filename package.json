{
  "name": "palt-typesetting",
  "version": "0.3.0",
  "description": "A typesetting library.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "bundle/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yamatoiizuka/palt-typesetting.git"
  },
  "scripts": {
    "clean:dist": "rm -rf ./dist && mkdir ./dist",
    "copy:types": "mkdir -p ./dist/types && cp -R ./src/types/* ./dist/types",
    "copy:css": "mkdir -p ./dist/style && cp -R ./src/style/* ./dist/style",
    "copy": "npm run copy:types && npm run copy:css",
    "prebuild": "npm run clean:dist && npm run copy",
    "build": "node ./scripts/build.js && node ./scripts/bundle.js",
    "test": "vitest",
    "lint": "eslint ./src/** --no-error-on-unmatched-pattern",
    "lint:fix": "eslint ./src/** --fix"
  },
  "author": {
    "name": "Yamato Iizuka",
    "email": "me@yamatoiizuka.com"
  },
  "license": "MIT",
  "browser": {
    "./dist/win.js": "./dist/win-browser.js"
  },
  "dependencies": {
    "jsdom": "^23.0.1",
    "linebreak": "^1.1.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.19.11",
    "eslint": "^8",
    "typescript": "^5",
    "vitest": "^1.2.2"
  }
}
