{
  "name": "palt-typesetting",
  "version": "0.1.0",
  "description": "A Japanese typesetting library, primarily focused on proportional spacing (font-feature-settings: 'palt').",
  "main": "./dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yamatoiizuka/palt-typesetting.git"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./bundle",
    "copy": "mkdir -p ./dist/types && cp -R ./src/types/* ./dist/types",
    "prebuild": "npm run clean && npm run copy",
    "build": "tsc && npm run bundle",
    "bundle": "esbuild ./dist/index.js --bundle --outfile=bundle/palt-typesetting.min.js --minify --sourcemap --platform=browser --target=es2016",
    "test": "jest"
  },
  "author": {
    "name": "Yamato Iizuka",
    "email": "me@yamatoiizuka.com"
  },
  "license": "MIT",
  "browser": {
    "./dist/win.js": "./dist/win-browser.js"
  },
  "dependencies": {
    "jsdom": "^23.0.1",
    "linebreak": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.19.11",
    "eslint": "^8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5"
  }
}
